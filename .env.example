# Portkey Configuration
PORTKEY_API_KEY=your-portkey-api-key
PORTKEY_BASE_URL=https://api.portkey.ai/v1

# AI Provider Slugs (Model Catalog format)
# Create these in Portkey UI: Model Catalog â†’ Add AI Provider
# Then replace with your actual provider slugs
OPENAI_PROVIDER_SLUG=openai
ANTHROPIC_PROVIDER_SLUG=anthropic
GOOGLE_PROVIDER_SLUG=google

# Optional: Direct API keys (for DeepEval judge or local testing)
# Only needed if running evaluations outside Portkey
# OPENAI_API_KEY=sk-xxx
# ANTHROPIC_API_KEY=sk-ant-xxx
# GOOGLE_API_KEY=xxx

# Application Settings
LOG_LEVEL=INFO
DATABASE_URL=sqlite+aiosqlite:///./data/optimizer.db

# Replay Settings
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT_SECONDS=60
RETRY_ATTEMPTS=3

# Evaluation Settings
DEEPEVAL_JUDGE_MODEL=gpt-4o
ENABLE_BERTSCORE=true
ENABLE_DEEPEVAL=true

# Analysis Settings
CONFIDENCE_LEVEL=0.95
MIN_SAMPLE_SIZE=30
